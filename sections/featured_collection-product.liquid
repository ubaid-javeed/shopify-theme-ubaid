<section class="featured-collection">
  <div class="container">
    <h2 class="section-title">{{ section.settings.text }}</h2>
    <div class="collection-grid">

     
        {% for product in section.settings.collection.products %}
  <div class="collection-item">
    <img 
      src="{{ product.featured_media | image_url: width: 400 }}" 
      alt="{{ product.title }}"
    >
    <h3 class="product-title">{{ product.title }}</h3>

    {% if product.price %}
      <p class="product-price">{{ product.price | money }}</p>
    {% endif %}
    <a href="{{ product.url }}" class="view-product-link">View Product</a>
  </div>
{% endfor %}
<div class="collection-grid">
  <h2 class="section-title">{{ section.settings.heading-new-collection }}</h2>

  </div>
  </div>
  </div>
</section>
<section>
   {% assign ubaidCollection= collections['ubaid'] %}
  {% for item in ubaidCollection.products %}
      <img src="{{ item.featured_media | image_url: width: 400 }}" alt="{{ item.title }}">
      <h1>{{ item.title }}</h1>
      <p>{{ item.price | money }}</p>
  {% endfor %}
</section>
<section>
   {% assign ehtishamCollection= collections['preparation'] %}
  {% for item in ehtishamCollection.products %}
      <img src="{{ item.featured_media | image_url: width: 400 }}" alt="{{ item.title }}">
      <h1>{{ item.title }}</h1>
      <p>{{ item.price | money }}</p>
  {% endfor %}
</section>
<style>
    .featured-collection {
  padding: 60px 20px;
  background-color: #f9f9f9;
  font-family: Arial, sans-serif;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
}

.section-title {
  text-align: center;
  font-size: 2rem;
  margin-bottom: 40px;
}

.collection-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
}

.collection-item {
  background-color: #fff;
  border: 1px solid #ddd;
  text-align: center;
  padding: 15px;
  border-radius: 8px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.collection-item:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 20px rgba(0,0,0,0.1);
}

.collection-item img {
  max-width: 100%;
  border-radius: 5px;
  margin-bottom: 15px;
}

.product-title {
  font-size: 1.1rem;
  margin-bottom: 10px;
  color: #333;
}

.product-price {
  font-size: 1rem;
  color: #555;
}
</style>

 {% schema %}
{
    "name": "Featured Collection ",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "text",
            "label": "add a heading",
            "default": "Featured Products"
        },
        {
            "type": "collection",
            "id": "collection",
            "label": "Select Collection"
        },
        {
            "type": "text",
            "id": "heading-new-collection",
            "label": "Heading for New Collection",
            "default": "New Collection",
            
        }
    ],
    "presets": [
        {
            "name": "Featured Collection "
        }
    ]
}
{% endschema %} 